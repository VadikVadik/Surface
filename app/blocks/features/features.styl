.features-item
	&__head
		font-size 50px
		font-weight bold
		line-height 60px
		text-transform uppercase
		color #e7e7e7
		margin 0
		margin-top 21px
		margin-left 19px
		
.info
	&__block-number
	&__block-header
		display inline-block
		vertical-align bottom
	&__block-number
		width 17px
		position relative
		font-size 14px
		font-weight bold
		line-height 28px
		&::before
			content ''
			position absolute
			display block
			width 100%
			height 4px
			bottom 0
			left 0
			background btn-color
	&__block-header
		font-size 24px
		line-height 31px
		font-weight bold
		text-transform uppercase
		color #c1c1c1