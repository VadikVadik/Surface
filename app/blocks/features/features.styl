.features-item
	position relative
	&__head
		font-size 50px
		font-weight bold
		line-height 60px
		text-transform uppercase
		color #e7e7e7
		margin 0
		margin-top 21px
		margin-left 19px
		padding-bottom 241px
		
		@media tablet
			font-size 90px
			margin-top 83px
			padding-bottom 0
	&__head--right
		@media tablet
			margin-left 290px
	&__img
		position absolute
		z-index 1
		left 50%
		top 13%
		transform translateX(-50%)
	
	&__img--left
		@media tablet
			top 0
			left 7%
			
	&__img--right
		@media tablet
			top -10%
			right 40%
			
	&__img--no-js
		top 5%

.features-right-item .info
	&__block
		@media tablet
			
			padding-left 290px
			
.features-left-item .info
	&__block
		@media tablet
			padding-left 33px
			padding-right 320px
		
.info
	position relative
	background #f5f4f9
	&__block
		padding 0 1%
		@media tablet
			min-height 205px
			padding-top 35px
			padding-bottom 35px
			box-sizing border-box
	&__block--white
		@media tablet
			background #fff
	&__block--purple
		@media tablet
			background btn-color
	&__block--blue
		@media tablet
			background #090c35
	&__block--no-js
		padding 20px 1%
	&__slide
		height 281px
		padding-top 78px
		box-sizing border-box
	&__block-number
	&__block-header
		display inline-block
		vertical-align top
	&__block-number
		width 17px
		position relative
		font-size 14px
		font-weight bold
		line-height 28px
		@media tablet
			width 22px
			font-size 18px
			line-height 34px
		&::before
			content ''
			position absolute
			display block
			width 100%
			height 4px
			bottom 3px
			left 0
			background btn-color
			border-radius 1px
	&__block-number--white
		@media tablet
			color btn-color
	&__block-number--white-underline::before
			@media tablet
				background #fff
	&__block-header
		font-size 24px
		line-height 31px
		font-weight bold
		text-transform uppercase
		color #c1c1c1
		@media tablet
			font-size 36px
			line-height 43px
	&__block-content
		font-weight bold
		margin 0
		padding 15px 0
		@media tablet
			font-size 18px
			line-height 28px
	&__block-content--white-font
		@media tablet
			color #fff